profiles {	
    standard {	
        process {	
            withName: 'Trimming' {	
                cpus = 8	
                memory = 16.GB	
            }	
            withName: 'Aligning' {	
                cpus = 8	
                memory = 16.GB	
            }	
            withName: 'NameSorting' {	
                cpus = 8
                memory = 16.GB	
            }
            withName: 'lofreq' {
                cpus = 4
                memory = 8.GB
            }
            withName: 'Clipping' {	
                cpus = 8
                memory = 16.GB	
            }
            withName: 'generateConsensus' {	
                cpus = 10
                memory = 20.GB	
            }	
    }
    testing {	
        process {	
            cpus = 2	
            memory = 4.GB	
        }	
    }	
}

// Docker always true. Containers defined in each process
docker.enabled = true
}
